{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/node_modules/**",
    "!**/dist/**",
    "!./index.ts",
    "!./testUtils.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "statements": 15,
      "branches": 2,
      "functions": 9,
      "lines": 15
    }
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "preset": "ts-jest",
  "testMatch": ["**/*.test.ts"],
  "testEnvironment": "node"
}
