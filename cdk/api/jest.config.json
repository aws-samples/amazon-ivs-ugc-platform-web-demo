{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["**/*.ts"],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "./index.ts",
    "./testUtils.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 3,
      "functions": 11,
      "lines": 36,
      "statements": 38
    }
  },
  "preset": "ts-jest",
  "testMatch": ["**/*.test.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/", "./testUtils.ts"],
  "testEnvironment": "node"
}
